        <div class="form-group col-md-4">
            <label asp-for="CustomerOrder.DeliveryDate" class="control-label"></label>
            <input asp-for="CustomerOrder.DeliveryDate" class="form-control"/>
            <span asp-validation-for="CustomerOrder.DeliveryDate" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="CustomerOrder.Quantity" class="control-label"></label>
            <input asp-for="CustomerOrder.Quantity" class="form-control"/>
            <span asp-validation-for="CustomerOrder.Quantity" class="text-danger"></span>
        </div>
        
        <div class="w-100 d-none d-md-block"></div>
        
        <div class="form-group col-md-4">
            <label asp-for="CustomerOrder.Cost" class="control-label"></label>
            <input asp-for="CustomerOrder.Cost" class="form-control"/>
            <span asp-validation-for="CustomerOrder.Cost" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="CustomerOrder.DeliveryStatus" class="control-label"></label>
            <input asp-for="CustomerOrder.DeliveryStatus" class="form-control" placeholder="eg. No, Yes, In progress"/>
            <span asp-validation-for="CustomerOrder.DeliveryStatus" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="CustomerOrder.Comments" class="control-label"></label>
            <input asp-for="CustomerOrder.Comments" class="form-control"/>
            <span asp-validation-for="CustomerOrder.Comments" class="text-danger"></span>
        </div>
