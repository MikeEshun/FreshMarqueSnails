@model CustomerOrder.IndexModel


@{
    ViewData["Title"] = "Orders";
}
<style type="text/css">
    .details_view { 
        font-weight: bolder
    }
</style>

<div>
    <div style="float: right">
        <a asp-page="Create" class="btn btn-default" id="newOrderBtn">New Order</a>
    </div>
    <h2>Orders</h2>
</div>

