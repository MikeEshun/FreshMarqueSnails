<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerOrder[0].OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerOrder[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerOrder[0].Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerOrder[0].DeliveryDate)
                </th>
                <th>
